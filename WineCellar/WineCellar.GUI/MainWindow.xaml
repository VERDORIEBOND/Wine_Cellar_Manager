<Window x:Class="WineCellar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WineCellar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="#FF202020"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <materialDesign:ColorZone
                Grid.Column="0" Grid.Row="1"
                Mode="Custom"
                Margin="6" VerticalAlignment="Stretch"
                CornerRadius="16"
                materialDesign:ShadowAssist.ShadowDepth="Depth3" Background="#FF333533">

            <DockPanel>
                
            </DockPanel>
        </materialDesign:ColorZone>

        <materialDesign:ColorZone
                Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2"
                Mode="Custom"
                Margin="6" VerticalAlignment="Stretch"
                CornerRadius="16"
                materialDesign:ShadowAssist.ShadowDepth="Depth3" Background="#FF333533">
            <DockPanel>
                <ListView Margin="10" Name="WineDataBinding" HorizontalAlignment="Center">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:ColorZone
                            Mode="Custom"
                            Background="#F3EFF5"
                            Foreground="#202020"
                            Padding="8"
                            CornerRadius="8">
                                <WrapPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Image Grid.Column="0" Grid.Row="0" Width="50" Source="C:\Users\lucas\source\repos\VERDORIEBOND\Wine_Cellar_Manager\WineCellar\WineCellar\Images\CatenaMalbec" Grid.RowSpan="2"/>
                                        <TextBlock Grid.Column="1" Grid.Row="0" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Text="Catena Malbec" FontWeight="Bold" />
                                        <TextBlock Grid.Column="2" Grid.Row="0" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" VerticalAlignment="Center" Text="Voorraad: " />
                                        <TextBlock Grid.Column="3" Grid.Row="0" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" VerticalAlignment="Center" Text="7" />
                                        
                                        <materialDesign:ColorZone
                                        Mode="Custom"
                                        Background="#333533"
                                        Foreground="#FFEE32"
                                        Padding="8"
                                        CornerRadius="8"
                                        Grid.Column="4" Grid.Row="0" Grid.RowSpan="2"
                                        VerticalAlignment="Center">
                                            <TextBlock Grid.Column="3" Grid.Row="0" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" FontWeight="Bold" ><Run Text="Inkoop:"/><LineBreak/><Run Text="Verkoop:"/></TextBlock>
                                        </materialDesign:ColorZone>
                                        <TextBlock Grid.Column="1" Grid.Row="1" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" VerticalAlignment="Center" Text="2019 Malbec - Argentinië" />
                                        <TextBlock Grid.Column="2" Grid.Row="1" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" VerticalAlignment="Center" Text="Locatie:" />
                                        <ComboBox
                                        materialDesign:ComboBoxAssist.ShowSelectedItem="{Binding ElementName=DisplaySelectedItemCheckBox, Path=IsChecked}"
                                        Grid.Column="3" Grid.Row="1"
                                        VerticalAlignment="Center">
                                            <ComboBoxItem
                                              IsSelected="True"
                                              Content="A3.6" />
                                            <ComboBoxItem
                                              Content="A18.6" />
                                            <ComboBoxItem
                                              Content="B3.20" />
                                            <ComboBoxItem
                                              Content="B3.21" />
                                        </ComboBox>
                                    </Grid>
                                </WrapPanel>
                            </materialDesign:ColorZone>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </DockPanel>
        </materialDesign:ColorZone>
    </Grid>
</Window>
